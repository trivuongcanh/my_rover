    <collision>
      <origin xyz="${position_wfl}" rpy="0 0 ${pi/2}" />
      <geometry>
        <mesh filename="file://$(find my_bot)/meshes/wheel_front_left_link.stl" scale="${scale}" />
      </geometry>
    </collision>
  </link>

  <link name="wheel_front_right_link">
    <inertial>
      <mass value="${mass_wfr}" />
      <origin xyz="0 0 0" rpy="0 0 ${pi/2}" />
      <inertia ixx="0.0011153598236428852" iyy="0.0007115715475157099" izz="0.0007099489539679392" ixy="0.0" iyz="0.0" ixz="0.0" />
    </inertial>
    <visual>
      <origin xyz="${position_wfr}" rpy="0 0 ${pi/2}" />
      <geometry>
        <mesh filename="file://$(find my_bot)/meshes/wheel_front_right_link.stl" scale="${scale}" />
