    <collision>
      <origin xyz="${position_screen}" rpy="0 0 ${pi/2}" />
      <geometry>
        <mesh filename="file://$(find my_bot)/meshes/oled_screen_link.stl" scale="${scale}" />
      </geometry>
    </collision>
  </link>

  <link name="wheel_back_left_link">
    <inertial>
      <mass value="${mass_wbl}" />
      <origin xyz="0 0 0" rpy="0 0 ${pi/2}" />
      <inertia ixx="0.0011153598236428852" iyy="0.0007115715200341761" izz="0.0007099489264864056" ixy="0.0" iyz="0.0" ixz="0.0" />
    </inertial>
    <visual>
      <origin xyz="${position_wbl}" rpy="0 0 ${pi/2}" />
      <geometry>
        <mesh filename="file://$(find my_bot)/meshes/wheel_back_left_link.stl" scale="${scale}" />
      </geometry>
      <xacro:black_material />
    </visual>
    <collision>
      <origin xyz="${position_wbl}" rpy="0 0 ${pi/2}" />
      <geometry>
        <mesh filename="file://$(find my_bot)/meshes/wheel_back_left_link.stl" scale="${scale}" />
      </geometry>
    </collision>
  </link>

  <link name="wheel_front_left_link">
    <inertial>
      <mass value="${mass_wfl}" />
      <origin xyz="0 0 0" rpy="0 0 ${pi/2}" />
      <inertia ixx="0.0011153873944048257" iyy="0.0007115715200341761" izz="0.0007099764972483459" ixy="0.0" iyz="0.0" ixz="0.0" />
    </inertial>
    <visual>
      <origin xyz="${position_wfl}" rpy="0 0 ${pi/2}" />
      <geometry>
        <mesh filename="file://$(find my_bot)/meshes/wheel_front_left_link.stl" scale="${scale}" />
